%h2.collapsible
  Advanced Search
  %span.caret
.collapsible-content
  = form_tag '', :method => 'get', :class => 'form-horizontal', :autocomplete=>"off" do
    .control-group
      = label_tag "Code", "Code", :class => 'control-label'
      = text_field_tag :code, params[:code]
    .control-group
      = label_tag "Status", "Status", :class => 'control-label'
      = select_tag :status_code, options_for_select([['NEW','NEW'],['COMPLETED','COMPLETED'],['FAILED','FAILED']],params[:status_code]),:prompt => 'ANY'
    .form-actions
      = button_tag "Search", :class => 'btn btn-primary'
      = button_tag "Reset", :type => 'button', :value=>'Reset', :class => 'btn', :id => 'sc_job_reset'
    = hidden_field_tag :advanced_search, :true


  :javascript
    $(document).ready(function(){
      $('input[type="text"]'). attr("placeholder", "Multisearch Search Enabled");
    });

    $("#sc_job_reset").click(function() {
      $(this).closest('form').find("input").val("");
    });