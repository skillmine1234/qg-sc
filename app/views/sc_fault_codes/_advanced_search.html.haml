%h2.collapsible
  Advanced Search
  %span.caret
.collapsible-content
  = form_tag '', :method => 'get', :class => 'form-horizontal', :autocomplete=>"off" do
    .control-group
      = label_tag "Fault Code", "Fault Code", :class => 'control-label'
      = text_field_tag :fault_code, params[:fault_code]
    .control-group
      = label_tag "Fault Kind", "Fault Kind", :class => 'control-label'
      = text_field_tag :fault_kind, params[:fault_kind]
    .form-actions
      = button_tag "Search", :class => 'btn btn-primary'
      = button_tag "Reset", :type => 'button', :value=>'Reset', :class => 'btn', :id => 'sc_fault_code_reset'
    = hidden_field_tag :advanced_search, :true

  :javascript
    $(document).ready(function(){
      $('input[type="text"]'). attr("placeholder", "Multisearch Search Enabled");
    });

    $("#sc_fault_code_reset").click(function() {
      $(this).closest('form').find("input").val("");
    });