%h2.collapsible
  Advanced Search
  %span.caret
.collapsible-content
  = form_tag '', :method => 'get', :class => 'form-horizontal', :autocomplete=>"off" do
    .control-group
      = label_tag "Backend Code", "Backend Code", :class => 'control-label'
      = text_field_tag :backend_code, params[:backend_code]
    .control-group
      = label_tag "Service Code", "Service Code", :class => 'control-label'
      = text_field_tag :service_code, params[:service_code]
    .control-group
      = label_tag "App ID", "App ID", :class => 'control-label'
      = text_field_tag :app_id, params[:app_id]
    .form-actions
      = button_tag "Search", :class => 'btn btn-primary'
      = button_tag "Reset", :type => 'button', :value=>'Reset', :class => 'btn', :id => 'sc_backend_setting_reset'
    = hidden_field_tag :advanced_search, :true

  :javascript
    $(document).ready(function(){
      $('input[type="text"]'). attr("placeholder", "Multisearch Search Enabled");
    });

    $("#sc_backend_setting_reset").click(function() {
      $(this).closest('form').find("input").val("");
    });