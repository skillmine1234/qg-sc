= simple_form_for @sc_proxy, :html => {:class=>'form-horizontal', :autocomplete=>"off", :id => "sc_proxy_form"} do |f|
  .control-group
    = f.label ' '
    #msg-error
      = error_message_for(@sc_proxy, :base, :prepend_text => "")
  .form-main{:style => 'width:100%'}
    = f.hidden_field :lock_version
    = f.hidden_field :approved_id
    = f.hidden_field :approved_version
    .control-group
      = f.label :is_enabled, "Enabled?", :class => 'control-label'
      = f.check_box :is_enabled, {},"Y","N"
      #msg-error
        = error_message_for(@sc_proxy, :is_enabled, :prepend_text => "")
    .control-group
      = f.label :sc_backend_code, "*SC Backend", :class => 'control-label'
      = f.select :sc_backend_code, ScBackend.all.map { |key, value| [key.code, key.code] }
      #msg-error
        = error_message_for(@sc_proxy, :sc_backend_code, :prepend_text => "")
    .control-group
      = f.label :url, "*URL", :class => 'control-label'
      = f.text_field :url, :placeholder => "Enter Url", :input_html => {:maxlength => 100}
      #msg-error
        = error_message_for(@sc_proxy, :url, :prepend_text => "")
    .control-group
      = f.label :username, "Username", :class => 'control-label'
      = f.text_field :username, :maxlength => 100
      #msg-error
        = error_message_for(@sc_proxy, :username, :prepend_text => "")
    .control-group
      = f.label :password, "Password", :class => 'control-label'
      = f.password_field :password, :value => f.object.password, :maxlength => 50
      #msg-error
        = error_message_for(@sc_proxy, :password, :prepend_text => "")

  .form-actions
    - (f.object.new_record? and f.object.sc_backend_code.nil?) ? label_name = "Create" : label_name = "Update"
    = f.button "submit" ,:class=>"btn btn-primary", :id => 'submit_rule', :value => label_name + ' Proxy'
    = link_to :Cancel,root_path, :name => 'cancel', :class=>"cancel btn"

